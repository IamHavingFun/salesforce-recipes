<aura:component controller="TestCtrl" access="global" >
    <aura:attribute name="title" type="String" />
    <aura:attribute name="recordId" type="Id" />
    <aura:attribute name="configuration" type="Object" />
    
    <aura:method name="getConfiguration" action="{!c.getConfiguration}" ></aura:method>

    <c:lax context="{!this}" />

    <c:resultToast aura:id="toast" />

    <fieldset class="slds-box slds-theme_default slds-container_small">
        <legend class="slds-text-heading_small slds-p-vertical_medium">{!v.title}</legend>

        <form aura:id="form" class="slds-form_stacked">
            {!v.body}
            <lightning:button type="submit" label="Save" onclick="{!c.save}" />
        </form>
    </fieldset>
</aura:component>